<div class="container">
  <div class="row justify-content-center">
    <%= simple_form_for [@planet, @booking] do |f| %>
      <%= f.input :start_date, as: :date %>
      <%= f.input :end_date, as: :date %>
      <%= f.input :number_of_guests, as: :numeric, min_max: true, input_html: { step: 10 } %>
      <%= f.button :submit, class: "btn-primary" %>
      <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
    <% end %>
  </div>
</div>
<footer>
  <span class="navbar-brand mb-0 h1 navbar-cocktail fixed-bottom" style="background-color: #ffffff;">Cocktail-wise</span>
</footer>

